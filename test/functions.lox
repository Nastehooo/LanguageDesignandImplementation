// Stage 6 - Functions 
fun greet(name) {
  print "Hello, " + name + "!";
}

greet("Lox");               // Hello, Lox!

fun add(a, b) {
  return a + b;
}

var result = add(3, 4);
print result;               // 7

fun factorial(n) {
  if (n <= 1) return 1;
  return n * factorial(n - 1);
}

print factorial(5);         // 120
